<!-- app/views/admin/users/edit.html.erb -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h1 class="card-title">Edytuj Użytkownika</h1>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |f| %>
            <div class="form-group">
              <%= f.label :name, 'Nazwa użytkownika:', class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :login, 'Email:', class: 'control-label' %>
              <%= f.email_field :login, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'Hasło:', class: 'control-label' %>
              <%= f.password_field :password, class: 'form-control', placeholder: 'Pozostaw puste, aby nie zmieniać' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, 'Potwierdź hasło:', class: 'control-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.submit 'Zapisz zmiany', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
