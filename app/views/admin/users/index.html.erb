<!-- app/views/admin/users/index.html.erb -->
<div class="container mt-4">
  <h1 class="mb-3">Użytkownicy</h1>

  <%= link_to 'Dodaj nowego użytkownika', new_admin_user_path, class: 'btn btn-success mb-3' %>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Nazwa</th>
        <th>Login</th>
        <th>Admin</th>
        <th>Edycja użytkownika</th>
        <th>Edycja uprawnień</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.login %></td>
          <td><%= user.isadmin ? 'Tak' : 'Nie' %></td>
          <td>
            <%= link_to 'Edytuj', edit_admin_user_path(user), class: 'btn btn-primary btn-sm' %>
            <%= button_to 'Usuń', admin_user_path(user), method: :delete, form: { class: 'd-inline' }, data: { confirm: 'Czy jesteś pewien?' }, class: 'btn btn-danger btn-sm' %>
          </td>
          <td>
            <%= link_to 'Edytuj uprawnienia', edit_permissions_admin_user_path(user), class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
