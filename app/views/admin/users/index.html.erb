<!-- app/views/admin/users/index.html.erb -->
<h1>Użytkownicy</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nazwa</th>
      <th>Login</th>
      <th>Admin</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.login %></td>
        <td><%= user.isadmin ? 'Tak' : 'Nie' %></td>
       <td>
        <%= link_to 'Edytuj', edit_admin_user_path(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Dodaj nowego użytkownika', new_admin_user_path %>
