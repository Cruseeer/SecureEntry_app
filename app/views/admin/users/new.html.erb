<!-- app/views/admin/users/new.html.erb -->
<%= form_with model: @user, url: admin_users_path, local: true do |f| %>
  <%= f.label :name, 'Nazwa użytkownika:' %>
  <%= f.text_field :name %>

  <%= f.label :login, 'Email:' %>
  <%= f.email_field :login %>

  <%= f.label :password, 'Hasło:' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, 'Potwierdź hasło:' %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :isadmin, 'Administrator' %>
  <%= f.check_box :isadmin %>

  <%= f.submit 'Utwórz użytkownika' %>


<% end %>
