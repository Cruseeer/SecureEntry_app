<!-- app/views/registrations/new.html.erb -->
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Zarejestruj się</h2>

          <%= form_for @user, url: registrations_path, html: { class: 'form-horizontal', role: 'form' } do |f| %>
            
            <div class="form-group">
              <%= f.label :name, 'Nazwa użytkownika:', class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :login, 'Email:', class: 'control-label' %>
              <%= f.email_field :login, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, 'Hasło:', class: 'control-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, 'Potwierdź hasło:', class: 'control-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="form-group text-center mt-4">
              <%= f.submit 'Zarejestruj się', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
